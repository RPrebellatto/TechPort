@model X.PagedList.IPagedList<TechPort.Models.VidaConteiner>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "Index";
}

<h1>Operações de Containers</h1>

<p>
    @Html.ActionLink("Criar Nova Operação", "Create", new {id = "" }, new {@class = "btn btn-primary"})
</p>
<table class="table table-secondary table-striped">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Conteiner)*@ @Html.LabelFor(model => model.FirstOrDefault().Conteiner, "Container", htmlAttributes: new { @class = "control-label col-md-2" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].StatusConteiner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Viagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Navio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Etapa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Conteiner.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusConteiner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Viagem.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Navio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etapa)
            </td>
            <td>
                    @Html.ActionLink("Editar", "Edit", new {id = item.Id}, new {@class = "btn btn-outline-primary"})   
                    @Html.ActionLink("Detalhes", "Details", new {id = item.Id }, new {@class = "btn btn-outline-primary"})   
                    @Html.ActionLink("Excluir", "Delete", new {id = item.Id}, new {@class = "btn btn-outline-danger"})
            </td>
        </tr>
}
    </tbody>
</table>


<div class="text-center">
    @(Html.PagedListPager(Model, page => Url.Action("Index", new { page })))
</div>