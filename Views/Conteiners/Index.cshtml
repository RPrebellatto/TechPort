@model IEnumerable<TechPort.Models.Conteiner>

@{
    ViewData["Title"] = "Index";
}

<h1>Containers</h1>

<p>
    @Html.ActionLink("Cadastrar Novo Container", "Create", new {id = "" }, new {@class = "btn btn-primary"})
</p>
<table id="tabela-containers" class="table table-secondary table-striped">
    <thead>
        <tr>
            <th>
                @Html.LabelFor(model => model.FirstOrDefault().Nome, "Container", htmlAttributes: new { @class = "control-label col-md-2" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.Nome)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {id = item.Id}, new {@class = "btn btn-outline-primary"})
                    @Html.ActionLink("Detalhes", "Details", new {id = item.Id }, new {@class = "btn btn-outline-primary"})
                    @Html.ActionLink("Excluir", "Delete", new {id = item.Id}, new {@class = "btn btn-outline-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tabela-containers').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json"
                }
            });
        });
    </script>
}