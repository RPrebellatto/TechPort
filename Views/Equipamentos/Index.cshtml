@model IEnumerable<TechPort.Models.Equipamentos>


<h2>Lista de Equipamentos</h2>
@if (Model.Count == 0)
{
    <p>Nenhum equipamento cadastrado.</p>
}
else
{
    foreach (var equipamento in Model)
    {
        <div>
            <h4>@equipamento.Nome</h4>
            <p>Tipo: @equipamento.Tipo</p>
            <p>ID: @equipamento.Id</p>
            <p>
                <a asp-action="Details" asp-route-id="@equipamento.Id">Detalhes</a> |
                <a asp-action="Edit" asp-route-id="@equipamento.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@equipamento.Id">Excluir</a>
            </p>
        </div>
        <hr />
    }
}

<div>
    @Html.Partial("_Pagination", Model)
</div>